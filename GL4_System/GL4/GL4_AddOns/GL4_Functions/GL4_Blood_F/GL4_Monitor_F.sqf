GL4_Monitor_F = [

	// ////////////////////////////////////////////////////////////////////////////
	// Monitor Function #0
	// ////////////////////////////////////////////////////////////////////////////
	// Monitor Delete
	// Script by =\SNKMAN/=
	// ////////////////////////////////////////////////////////////////////////////
	{private ["_a","_b","_c","_d"];

	GL4_Blood set [2, False ];

	_a = (GL4_Local select 9);

	_b = _a / 2;

	while { (count (GL4_Blood select 0) > _b) } do
	{
		_c = (GL4_Blood select 0);

		_d = (_c select 0);

		hideBody _d;

		sleep 0.01;

		GL4_Blood set [0, (GL4_Blood select 0) - [_d] ];

		deleteVehicle _d;
	};

	GL4_Blood set [2, True];

	},

	// ////////////////////////////////////////////////////////////////////////////
	// Monitor Function #1
	// ////////////////////////////////////////////////////////////////////////////
	// Monitor Time
	// Script by =\SNKMAN/=
	// ////////////////////////////////////////////////////////////////////////////
	{private ["_a","_b","_c"];

	GL4_Blood set [3, False ];

	if (count (GL4_Blood select 0) > 0) then
	{
		GL4_Blood set [4, time + 180];

		_a = (GL4_Blood select 0);

		_b = 0;

		while { (_b < count _a) } do
		{
			_c = (_a select _b);

			hideBody _c;

			sleep 0.1;

			GL4_Blood set [0, (GL4_Blood select 0) - [_c] ];

			deleteVehicle _c;

			_b = _b + 1;
		};
	};

	GL4_Blood set [3, True];

	}
];